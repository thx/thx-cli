{
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true
    },
    "bootstrap": {
      "npmClient": "yarn"
    },
    "run": {
      "npmClient": "yarn"
    },
    "exec": {
      "npmClient": "yarn"
    },
    "publish": {
      "verifyRegistry": false,
      "npmClient": "npm",
      "verifyAccess": false,
      "allowBranch": [
        "master"
      ]
    }
  },
  "version": "independent",
  "loglevel": "verbose"
}
